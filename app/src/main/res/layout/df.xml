<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="-2.7sp"
        android:text="John Smit"
        android:textColor="#444445"
        android:textSize="17sp"
        app:fontFamily="@font/open_sans" />


    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d0d5da" />


    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily=""
        android:lineSpacingExtra="1.3sp"
        android:text="Car Assistant"
        android:textColor="#aab0b9"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d0d5da" />


    <TextView
        android:id="@+id/hashtag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="#Masster"
        android:textColor="#444445"
        android:textSize="13sp"
        app:fontFamily="@font/open_sans" />


    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d0d5da" />


    <TextView
        android:id="@+id/hashtag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="#Fucker"
        android:textColor="#444445"
        android:textSize="13sp"
        app:fontFamily="@font/open_sans" />


    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d0d5da" />


    <TextView
        android:id="@+id/hashtag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="#Sucker"
        android:textColor="#444445"
        android:textSize="13sp"
        app:fontFamily="@font/open_sans" />
</LinearLayout>